<?xml version="1.0"?>
<psalm
    errorLevel="7"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    autoloader="psalm_autoload.php"
    cacheDirectory="build/psalm/"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
>
    <projectFiles>
        <directory name="app/" />
        <directory name="tests/" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="app/Config" />
            <directory name="app/Views" />
            <file name="app/Cells/category_list_cell.php" />
            <file name="app/Cells/discussion_list_cell.php" />
            <file name="app/Cells/show_thread_cell.php" />
            <file name="app/Routes.php" />
        </ignoreFiles>
    </projectFiles>
</psalm>
